<body>
    <h1>O Jogo Legal</h1>
    <p class="word" id="scrambled-word">Carregando...</p>
    <input type="text" id="guess" placeholder="Digite a palavra correta" />
    <br />
    <button onclick="checkGuess()">Enviar</button>
    <button onclick="newWord()">Nova Palavra</button>
    <p class="timer" id="timer">Tempo restante: 60s</p>
    <p class="score" id="feedback"></p>
    <p class="score" id="score">Pontua√ß√£o: 0</p>

    <script>
        const wordsByLevel = {
            1: ["paz", "sol", "c√£o", "rio"],
            2: ["livro", "tempo", "praia", "chave"],
            3: ["amizade", "coragem", "natureza", "felicidade"]
        };

        let currentWord = "";
        let scrambled = "";
        let score = 0;
        let timer = 60;
        let interval;
        let level = 1;

        if (localStorage.getItem("score")) {
            score = parseInt(localStorage.getItem("score"));
            document.getElementById("score").textContent = "Pontua√ß√£o: " + score;
        }

        function shuffle(word) {
            return word.split('').sort(() => Math.random() - 0.5).join('');
        }

        function newWord() {
            clearInterval(interval);
            timer = 60;
            updateTimer();

            if (score >= 50) level = 3;
            else if (score >= 20) level = 2;

            const words = wordsByLevel[level];
            currentWord = words[Math.floor(Math.random() * words.length)];
            scrambled = shuffle(currentWord);
            while (scrambled === currentWord) {
                scrambled = shuffle(currentWord);
            }

            document.getElementById("scrambled-word").textContent = scrambled;
            document.getElementById("guess").value = "";
            document.getElementById("feedback").textContent = "";

            interval = setInterval(() => {
                timer--;
                updateTimer();
                if (timer <= 0) {
                    clearInterval(interval);
                    document.getElementById("feedback").textContent = "Tempo esgotado! üòû A palavra era: " + currentWord;
                    setTimeout(newWord, 2000);
                }
            }, 1000);
        }

        function updateTimer() {
            document.getElementById("timer").textContent = "Tempo restante: " + timer + "s";
        }

        function checkGuess() {
            const guess = document.getElementById("guess").value.toLowerCase();
            if (guess === currentWord) {
                clearInterval(interval);
                score += 10;
                localStorage.setItem("score", score);
                document.getElementById("feedback").textContent = "Correto! üéâ";
                document.getElementById("score").textContent = "Pontua√ß√£o: " + score;
                setTimeout(newWord, 1000);
            } else {
                document.getElementById("feedback").textContent = "Tente novamente üòÖ";
            }
        }

        newWord();
    </script>

    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('./sw.js').then(registration => {
            console.log('Service Worker registrado com sucesso:', registration.scope);
          }).catch(err => {
            console.log('Falha ao registrar Service Worker:', err);
          });
        });
      }
    </script>
</body>
