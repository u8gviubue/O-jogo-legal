    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 50px;
            background-color: #f4f4f4;
        }
        h1 {
            color: #2c3e50;
        }
        .word {
            font-size: 32px;
            font-weight: bold;
            margin: 30px 0;
        }
        input, button {
            padding: 10px;
            font-size: 18px;
            margin-top: 10px;
        }
        .score, .timer {
            margin-top: 20px;
            font-size: 18px;
        }
        .score { color: #27ae60; }
        .timer { color: #e74c3c; }
    </style>
    <link rel="icon" href="data:image/png;base64," />
